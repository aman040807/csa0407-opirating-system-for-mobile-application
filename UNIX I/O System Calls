#include <stdio.h>
#include <fcntl.h>
#include <unistd.h>
#include <sys/stat.h>
#include <dirent.h>

int main() {
    int fd;
    char buf[20];
    struct stat st;

    
    fd = open("test.txt", O_RDONLY);
    if (fd < 0) { perror("open"); return 1; }

    int flags = fcntl(fd, F_GETFL);
    printf("File descriptor flags: %d\n", flags);

    lseek(fd, 5, SEEK_SET);
    read(fd, buf, 10);
    buf[10] = '\0';
    printf("After lseek, read: %s\n", buf);

    stat("test.txt", &st);
    printf("File size: %ld bytes\n", st.st_size);

    DIR *d = opendir(".");
    struct dirent *dir;
    if (d) {
        printf("Files in current directory:\n");
        while ((dir = readdir(d)) != NULL)
            printf("  %s\n", dir->d_name);
        closedir(d);
    }
    close(fd);
    return 0;
}
