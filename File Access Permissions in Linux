#include <stdio.h>
#include <sys/stat.h>

int main() {
    struct stat s;
    char filename[50];
    printf("Enter filename: ");
    scanf("%s", filename);

    if(stat(filename,&s)==0) {
        printf("User: %c%c%c\n",
               (s.st_mode & S_IRUSR)?'r':'-',
               (s.st_mode & S_IWUSR)?'w':'-',
               (s.st_mode & S_IXUSR)?'x':'-');

        printf("Group: %c%c%c\n",
               (s.st_mode & S_IRGRP)?'r':'-',
               (s.st_mode & S_IWGRP)?'w':'-',
               (s.st_mode & S_IXGRP)?'x':'-');

        printf("Others: %c%c%c\n",
               (s.st_mode & S_IROTH)?'r':'-',
               (s.st_mode & S_IWOTH)?'w':'-',
               (s.st_mode & S_IXOTH)?'x':'-');
    } else {
        printf("File not found!\n");
    }
    return 0;
}
