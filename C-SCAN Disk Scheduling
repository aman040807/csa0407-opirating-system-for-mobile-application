#include <stdio.h>
#include <stdlib.h>

int main() {
    int n, head, size;
    printf("Enter number of requests: ");
    scanf("%d",&n);
    int req[n], i, j;
    printf("Enter request sequence: ");
    for(i=0;i<n;i++) scanf("%d",&req[i]);
    printf("Enter initial head: ");
    scanf("%d",&head);
    printf("Enter disk size: ");
    scanf("%d",&size);

    // sort
    for(i=0;i<n-1;i++)
        for(j=i+1;j<n;j++)
            if(req[i]>req[j]) { int t=req[i]; req[i]=req[j]; req[j]=t; }

    int seek=0, pos;
    for(i=0;i<n;i++) if(head<req[i]) { pos=i; break; }

    for(i=pos;i<n;i++){ seek+=abs(req[i]-head); head=req[i]; }
    seek+=abs((size-1)-head); head=0; seek+=size-1;
    for(i=0;i<pos;i++){ seek+=abs(req[i]-head); head=req[i]; }

    printf("Total head movement = %d\n", seek);
    return 0;
}
