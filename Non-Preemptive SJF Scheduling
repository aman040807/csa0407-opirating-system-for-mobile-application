#include <stdio.h>
#include <limits.h>

struct Process {
    int pid, at, bt, ct, tat, wt, done;
};

int main() {
    int n, i, t = 0, completed = 0;
    printf("Enter number of processes: ");
    scanf("%d", &n);
    struct Process p[n];

    for (i = 0; i < n; i++) {
        printf("AT, BT for P%d: ", i+1);
        scanf("%d %d", &p[i].at, &p[i].bt);
        p[i].pid = i+1;
        p[i].done = 0;
    }

    while (completed != n) {
        int idx = -1, minBT = INT_MAX;
        for (i = 0; i < n; i++) {
            if (!p[i].done && p[i].at <= t && p[i].bt < minBT) {
                minBT = p[i].bt;
                idx = i;
            }
        }

        if (idx != -1) {
            p[idx].ct = t + p[idx].bt;
            p[idx].tat = p[idx].ct - p[idx].at;
            p[idx].wt = p[idx].tat - p[idx].bt;
            p[idx].done = 1;
            completed++;
            t = p[idx].ct;
        } else {
            t++;
        }
    }

    printf("\nPID AT BT CT TAT WT\n");
    for (i = 0; i < n; i++)
        printf("P%d  %d  %d  %d  %d  %d\n", p[i].pid, p[i].at, p[i].bt, p[i].ct, p[i].tat, p[i].wt);
    return 0;
}
