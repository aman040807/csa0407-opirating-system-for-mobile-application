#include <stdio.h>
#include <stdlib.h>

struct Block {
    int id;
    struct Block *next;
};

int main() {
    int n, i;
    struct Block *head = NULL, *tail = NULL, *newBlock;

    printf("Enter number of blocks in file: ");
    scanf("%d", &n);

    for (i=0; i<n; i++) {
        newBlock = (struct Block*)malloc(sizeof(struct Block));
        printf("Enter block number: ");
        scanf("%d", &newBlock->id);
        newBlock->next = NULL;

        if (head == NULL) head = tail = newBlock;
        else {
            tail->next = newBlock;
            tail = newBlock;
        }
    }

    printf("File allocated (linked blocks): ");
    struct Block *temp = head;
    while (temp != NULL) {
        printf("%d -> ", temp->id);
        temp = temp->next;
    }
    printf("NULL\n");
    return 0;
}
