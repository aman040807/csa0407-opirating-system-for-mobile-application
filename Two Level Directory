#include <stdio.h>
#include <string.h>

struct {
    char dname[20], fname[10][20];
    int fcnt;
} dir[10];

int main() {
    int dcnt=0, ch;
    char d[20], f[20];

    while(1) {
        printf("\n1.Create Directory\n2.Create File\n3.List\n4.Exit\n");
        scanf("%d",&ch);
        switch(ch) {
            case 1: printf("Enter directory name: ");
                    scanf("%s",dir[dcnt].dname);
                    dir[dcnt].fcnt=0;
                    dcnt++; break;
            case 2: printf("Enter directory name: ");
                    scanf("%s",d);
                    for(int i=0;i<dcnt;i++){
                        if(strcmp(d,dir[i].dname)==0){
                            printf("Enter file name: ");
                            scanf("%s",dir[i].fname[dir[i].fcnt]);
                            dir[i].fcnt++;
                        }
                    }
                    break;
            case 3: for(int i=0;i<dcnt;i++){
                        printf("Directory %s:\n",dir[i].dname);
                        for(int j=0;j<dir[i].fcnt;j++)
                            printf("   %s\n",dir[i].fname[j]);
                    }
                    break;
            case 4: return 0;
        }
    }
}
