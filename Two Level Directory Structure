#include <stdio.h>
#include <string.h>

struct {
    char dname[10], fname[10][10];
    int fcnt;
} dir[10];

int main() {
    int dc, ch;
    char d[10], f[10];
    dc = 0;
    do {
        printf("\n1. Create Directory\n2. Create File\n3. Display\n4. Exit\nChoice: ");
        scanf("%d", &ch);
        switch(ch) {
            case 1:
                printf("Enter directory name: ");
                scanf("%s", dir[dc].dname);
                dir[dc].fcnt = 0;
                dc++;
                break;
            case 2:
                printf("Enter directory name: ");
                scanf("%s", d);
                for (int i = 0; i < dc; i++) {
                    if (strcmp(d, dir[i].dname) == 0) {
                        printf("Enter file name: ");
                        scanf("%s", dir[i].fname[dir[i].fcnt]);
                        dir[i].fcnt++;
                        break;
                    }
                }
                break;
            case 3:
                for (int i = 0; i < dc; i++) {
                    printf("Directory %s:\n", dir[i].dname);
                    for (int j = 0; j < dir[i].fcnt; j++)
                        printf("  %s\n", dir[i].fname[j]);
                }
                break;
        }
    } while (ch < 4);
    return 0;
}
