#include <stdio.h>

int main() {
    int n, bt[20], wt = 0, tt = 0, i, j, temp;
    printf("Enter no. of processes & burst times:\n");
    scanf("%d", &n);
    for (i = 0; i < n; i++) 
	scanf("%d", &bt[i]);
    for (i = 0; i < n - 1; i++) 
	for (j = 0; j < n - i - 1; j++)
        if (bt[j] > bt[j + 1]) { temp = bt[j]; bt[j] = bt[j + 1]; bt[j + 1] = temp; }
    printf("\nProcess\tWT\tTT\n");
    for (i = 0; i < n; i++) {
        tt += wt + bt[i];
        printf("P%d\t\t%d\t%d\n", i + 1, wt, wt + bt[i]);
        wt += bt[i];
    }
    printf("\nAvg WT: %.2f\nAvg TT: %.2f\n", (float)(wt - bt[n - 1]) / n, (float)tt / n);
    return 0;
}
