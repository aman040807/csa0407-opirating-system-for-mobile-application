#include <stdio.h>

struct Process {
    int pid, bt, rem_bt, wt, tat;
};

int main() {
    int n, tq, t = 0, i, done;
    printf("Enter n and time quantum: ");
    scanf("%d %d", &n, &tq);

    struct Process p[n];
    for (i = 0; i < n; i++) {
        p[i].pid = i + 1;
        printf("BT P%d: ", i + 1);
        scanf("%d", &p[i].bt);
        p[i].rem_bt = p[i].bt;
        p[i].wt = p[i].tat = 0;
    }

    do {
        done = 1;
        for (i = 0; i < n; i++) {
            if (p[i].rem_bt > 0) {
                done = 0;
                if (p[i].rem_bt > tq) {
                    t += tq;
                    p[i].rem_bt -= tq;
                } else {
                    t += p[i].rem_bt;
                    p[i].tat = t;
                    p[i].wt = p[i].tat - p[i].bt;
                    p[i].rem_bt = 0;
                }
            }
        }
    } while (!done);

    float avgWT = 0, avgTAT = 0;
    printf("\nProcess\tBT\tWT\tTAT\n");
    for (i = 0; i < n; i++) {
        printf("P%d\t%d\t%d\t%d\n", p[i].pid, p[i].bt, p[i].wt, p[i].tat);
        avgWT += p[i].wt;
        avgTAT += p[i].tat;
    }
    printf("\nAverage Waiting Time = %.2f", avgWT / n);
    printf("\nAverage Turnaround Time = %.2f\n", avgTAT / n);
    return 0;
}
