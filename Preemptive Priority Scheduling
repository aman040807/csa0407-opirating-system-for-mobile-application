#include <stdio.h>

struct Process {
    int pid, bt, at, prio, ct, tat, wt, rem_bt;
};

int main() {
    int n, t = 0, completed = 0, i, idx;
    printf("Enter number of processes: ");
    scanf("%d", &n);
    struct Process p[n];

    for (i = 0; i < n; i++) {
        printf("AT, BT, Priority for P%d: ", i+1);
        scanf("%d %d %d", &p[i].at, &p[i].bt, &p[i].prio);
        p[i].pid = i+1;
        p[i].rem_bt = p[i].bt;
    }

    while (completed != n) {
        idx = -1;
        int bestPrio = 9999;
        for (i = 0; i < n; i++) {
            if (p[i].at <= t && p[i].rem_bt > 0 && p[i].prio < bestPrio) {
                bestPrio = p[i].prio;
                idx = i;
            }
        }

        if (idx != -1) {
            p[idx].rem_bt--;
            if (p[idx].rem_bt == 0) {
                p[idx].ct = t+1;
                p[idx].tat = p[idx].ct - p[idx].at;
                p[idx].wt = p[idx].tat - p[idx].bt;
                completed++;
            }
        }
        t++;
    }

    printf("\nPID AT BT PR CT TAT WT\n");
    for (i = 0; i < n; i++)
        printf("P%d  %d  %d  %d  %d  %d  %d\n", p[i].pid, p[i].at, p[i].bt, p[i].prio, p[i].ct, p[i].tat, p[i].wt);
    return 0;
}
