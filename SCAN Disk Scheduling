#include <stdio.h>
#include <stdlib.h>

int main() {
    int n, head, size, dir;
    printf("Enter disk size: ");
    scanf("%d", &size);
    printf("Enter number of requests: ");
    scanf("%d", &n);
    int req[n];
    printf("Enter request sequence: ");
    for (int i = 0; i < n; i++)
        scanf("%d", &req[i]);
    printf("Enter initial head position: ");
    scanf("%d", &head);
    printf("Enter direction (1=high, 0=low): ");
    scanf("%d", &dir);

    // sort requests
    for (int i = 0; i < n-1; i++)
        for (int j = 0; j < n-i-1; j++)
            if (req[j] > req[j+1]) {
                int temp = req[j];
                req[j] = req[j+1];
                req[j+1] = temp;
            }

    int seek = 0, index;
    for (int i = 0; i < n; i++)
        if (head < req[i]) {
            index = i;
            break;
        }

    if (dir == 1) {
        for (int i = index; i < n; i++) {
            seek += abs(head - req[i]);
            head = req[i];
        }
        seek += abs(head - (size - 1));
        head = size - 1;
        for (int i = index - 1; i >= 0; i--) {
            seek += abs(head - req[i]);
            head = req[i];
        }
    } else {
        for (int i = index - 1; i >= 0; i--) {
            seek += abs(head - req[i]);
            head = req[i];
        }
        seek += head;
        head = 0;
        for (int i = index; i < n; i++) {
            seek += abs(head - req[i]);
            head = req[i];
        }
    }

    printf("Total Seek Time = %d\n", seek);
    printf("Average Seek Time = %.2f\n", (float)seek/n);
    return 0;
}
